<%- include ("./partials/header") %>
 

<div class="container top-gap"> 
    <h1>Get In Touch</h1>
    <hr>
    <p class="mt-3">For more information please use the form below, or connect with me on my socials</p>
</div>
<div class="container d-flex justify-content-around">
    <div class="shadow mt-5">
        <form action="/contact/formProcess" method="POST">
            <input id="name" class="d-block" type="text" name="name" placeholder="Name" required>
            <input type="text" id="safe" name="age" placeholder="Age">
            <input id="email" class="d-block" type="email" name="email" placeholder="Email" required>
            <textarea id="message" class="d-block" name="message" rows="10" cols="30" placeholder="Message" required></textarea>
            <button class="d-block btn btn-xl btn-custom-contact">Send Message!</button>
        </form>
    </div>

    <div>
        <h3 class="other">Let's be social!</h3>
        <hr>
        <div class="row">
            <div class="col-md-6">
                <a href="mailto: thestoreysocial@hotmail.com" target="_blank"><i class="twitter fas fa-envelope"></i></a>
            </div>
            <div class="col-md-6">
                <a href="https://linkedin.com/in/christina-storey-a0a88a19b" target="_blank"><i class="in fab fa-linkedin-in"></i></a>
            </div>
        </div>
        <div class="row">
            <div class="mt-4 col-md-6">
                <a href="https://instagram.com/christinastorey/" target="_blank"><i class="in fab fa-instagram"></i></a>
            </div>
            <div class="mt-4 col-md-6">
                <a href="https://twitter.com/Cstoreyy" target="_blank"><i class="twitter fab fa-twitter"></i></a>
            </div>
        </div>

    </div>
</div>

